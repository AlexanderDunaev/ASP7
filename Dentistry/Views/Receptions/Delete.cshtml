@model Dentistry.Models.Reception

@{
    ViewData["Title"] = "Удалить";
}

<h1>
    <p align="center">Удаление приёма</p>
</h1>

<div>
    <hr />
    <dl>
        <dt class = "labelB">
            Доктор
        </dt>
        <dd class = "labelM">
            @Html.DisplayFor(model => model.Doctor.Surname)
            @Html.DisplayFor(model => model.Doctor.Name)
            @Html.DisplayFor(model => model.Doctor.MiddleName)
        </dd>
        <dt class="labelB">
            Пациент
        </dt>
        <dd class="labelM">
            @Html.DisplayFor(model => model.Patient.Surname)
            @Html.DisplayFor(model => model.Patient.Name)
            @Html.DisplayFor(model => model.Patient.MiddleName)
        </dd>
        <dt class="labelB">
            Кабинет
        </dt>
        <dd class="labelM">
            @Html.DisplayFor(model => model.Cabinet)
        </dd>
        <dt class="labelB">
            Дата приёма
        </dt>
        <dd class="labelM">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="labelB">
            Время приёма
        </dt>
        <dd class="labelM">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="labelB">
            Статус приёма
        </dt>
        <dd class="labelM">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete" style="text-align:center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="edt" style="background-color:#dc3545" /> |
        <button asp-action="Index" class="edt" style="background-color:#0d6efd">К списку приёмов</button>
    </form>
</div>
